package com.example;

import java.util.ArrayList;
import java.util.List;

public class SelectorVisitor extends TreeSelectorBaseVisitor<List<String>> {
	@Override
	public List<String> visitPath(TreeSelectorParser.PathContext ctx) {
		List<String> pathElements = new ArrayList<>();
		for (TreeSelectorParser.NameContext nameCtx : ctx.name()) {
			pathElements.add(nameCtx.getText());
		}
		return pathElements;
	}

	@Override
	protected List<String> aggregateResult(List<String> aggregate, List<String> nextResult) {
		if(nextResult != null) {
			aggregate.addAll(nextResult);
		}
		return aggregate;
	}
}